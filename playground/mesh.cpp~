#include "allocore/io/al_App.hpp"
using namespace al;

struct Frame : Mesh {
  Frame() {
    frame.primitive(Graphics::LINES);
   
    frame.vertex(0,0,0);
    frame.color(1,1,1);
    frame.vertex(1,0,0);
    frame.color(1,0,0);
    //y-axis
    vertex(0,0,0);
    color(1,1,1);
    vertex(0,1,0);
    color(0,1,0);
    //z-axis
    vertex(0,0,0);
    color(1,1,1);
    vertex(0,0,1);
    color(0,0,1);
  }
};

struct MyApp : App {
  float t = 0;
  Frame frame;
  // Mesh c;
  MyApp() {
  initWindow();
  // c.primitive(Graphics::LINE_LOOP);
  // for (int i=0; i<100; i++) {
   // c.vertex(sin(M_PI * 2 * i /100), cos(M_PI * 2 * i /100))
   // c.color(1,1,1);  
  }

                 
void onAnimate(double dt) {
  t += dt / 10;
  if (t > 1) t -= 1;
  }
                 
void onDraw(Graphics& g, const Viewpoint& vp) { 
g.draw(frame);
//g.draw(c);  
  }
  };

int main() { MyApp().start(); }
